func _unhandled_input(event: InputEvent) -> void:
	if visible and pode_avancar and event.is_action_pressed(\"ui_accept\"):
		visible = false

# fun√ß√£o ass√≠ncrona para digitar letra a letra
func _type_text(texto: String) -> void:
	# opcional: espera um pouquinho antes de come√ßar
	await get_tree().create_timer(0.05).timeout

	for letra in texto:
		$Panel/ScrollContainer/Label.text += letra
		# intervalo entre cada caractere (ajuste para mais r√°pido/lento)
		await get_tree().create_timer(0.02).timeout

	# liberou a possibilidade de avan√ßar/fechar
	pode_avancar = true
